<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".forget_password">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back_forgetPassword"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:src="@drawable/img_1"
            tools:ignore="SpeakableTextPresentCheck" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/logooo"/>

    <TextView
        android:id="@+id/tv_forget_password"
        style="@style/TextViewStyle"
        android:text="Forget Password"
        android:textColor="@color/black"
        android:layout_marginTop="11dp"/>

    <TextView
        android:id="@+id/tv_forgetPassword_desc"
        style="@style/TextViewStyle"
        android:text="We'll send you an email with a link to reset your password"
        android:textColor="@color/bold_grey_txt"
        android:textSize="14sp"
        android:layout_margin="10dp"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_email_forgetPassword"
            style="@style/TextInputEditTextStyle"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:hint="Email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_forgetPassword"
        android:layout_width="325dp"
        android:layout_height="52dp"
        app:backgroundTint="@null"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_shape"
        android:text="Send"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textSize="15sp"
       />


</LinearLayout>