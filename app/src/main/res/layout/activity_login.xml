<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".login">


    <ImageView
        android:layout_width="100dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="100dp"
        android:src="@drawable/logooo"/>
    <TextView
        android:id="@+id/tv_app_name"
        style="@style/TextViewStyle"
        android:text="Schoolie"
        android:paddingTop="10dp"
        android:textStyle="normal"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_desc"
        style="@style/TextViewStyle"
        android:textAlignment="center"
        android:textColor="@color/txt_color"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_margin="10dp"
        android:text="@string/slogan" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp">

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_il_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_email_signIn"
            style="@style/TextInputEditTextStyle"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingTop="10dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_il_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_password_signIn"
            style="@style/TextInputEditTextStyle"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingTop="10dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_forget_password"
        style="@style/TextViewStyle"
        android:text="Forgot password"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/txt_color"/>

    <Button
        android:id="@+id/btn_signIn"
        android:layout_width="325dp"
        android:layout_height="52dp"
        app:backgroundTint="@null"
        android:background="@drawable/bg_shape"
        android:text="Sign in"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_not_have_account"
            style="@style/TextViewStyle"
            android:textColor="@color/bold_grey_txt"
            android:textAllCaps="false"
            android:textAlignment="textEnd"
            android:layout_marginTop="30dp"
            android:textSize="12sp"
            android:paddingStart="80dp"
            android:textStyle="normal"
            android:layout_weight="1"
            android:text="Don't have an account?" />
        <Button
            android:id="@+id/btn_signup_signIn"
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="11sp"
            android:layout_weight="1"
            android:paddingEnd="100dp"
            android:textColor="@color/black"
            android:text="Sign up"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

    </LinearLayout>



</LinearLayout>